@page
@model Sync1Demo.Pages.Applicants.ApplicantCreateModel
@{
}


<form method="post">
    <div class="form-group">
        <label asp-for=Applicant.Name>Sender's Name</label>
        <input asp-for=Applicant.Name class="form-control" type="text" placeholder="Name" required>
    </div>
    <div class="form-group">
        <label asp-for=Applicant.Email>Email Address</label>
        <input asp-for=Applicant.Email class="form-control" type="text" placeholder="cyberninja@hacker.io" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$" required>
    </div>
    <div class="form-group">
        <label asp-for=Applicant.PhoneNumber>Phone Number</label>
        <input asp-for=Applicant.PhoneNumber class="form-control" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
    </div>
    <div class="form-group">
        <label asp-for=Applicant.LoanAmount>Loan Amount</label>
        <input asp-for=Applicant.LoanAmount class="form-control" type="text" required>
    </div>
    <button type="submit" class="btn btn-dark">Submit</button>
    <button asp-page="./ApplicantEdit" class="btn btn-dark">Applicant List</button>
</form>